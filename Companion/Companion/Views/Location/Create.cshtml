@model Companion.Models.Entities.Location
<div class="text-center">
    <h2>Создать локацию</h2>
</div>
<div class="row">
    <div class="container4">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <h5><label for="Create">Адрес:</label></h5>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5><label for="Create">Долгота:</label></h5>
                <input asp-for="Longitude" class="form-control" />
                <span asp-validation-for="Longitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5><label for="Create">Широта:</label></h5>
                <input asp-for="Latitude" class="form-control" />
                <span asp-validation-for="Latitude" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5><label for="Create">Радиус:</label></h5>
                <input asp-for="Radius" class="form-control" />
                <span asp-validation-for="Radius" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div class="text-center">
                <button id="set" type="submit" class="btn btn-success btn-lg">Создать</button>
            </div>
        </form>
    </div>
</div>
