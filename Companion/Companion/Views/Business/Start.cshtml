@model Companion.Views.Models.Business.StartViewModel
<div class="text-center">
    <h2>Старт</h2>
</div>
<div class="row">
    <div class="container4">
        <form asp-action="Start" method="post" asp-route-id="@Model.Id">
            <div class="form-group">
                <h5><label for="Start">Категория:</label></h5>
                <select asp-for="Category" id="sel1">
                    @foreach (var cat in Model.Categories)
                    {
                        <option value="@cat">@cat</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <h5><label for="Start">Название:</label></h5>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5><label for="Start">Описание:</label></h5>
                <input asp-for="AboutIt" class="form-control" />
                <span asp-validation-for="AboutIt" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div class="text-center">
                <button id="set" type="submit" class="btn btn-success btn-lg">Далее</button>
            </div>
        </form>
    </div>
</div>
