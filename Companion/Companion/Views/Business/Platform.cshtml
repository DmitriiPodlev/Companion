@model Companion.Views.Models.Business.PlatformViewModel
<div class="text-center">
    <h2>Платформа</h2>
</div>
<div class="row">
    <div class="container4">
        <form asp-action="Platform" method="post" asp-route-id="@Model.Id">
            <div class="form-group">
                <h5><label for="Platform">Форма взаимодействия:</label></h5>
                <select asp-for="Form" id="sel1">
                 @foreach (var form in Model.Forms)
        {
            <option value="@form">@form</option>
        }
                </select>
            </div>
            <div class="form-group">
                <h5><label for="Platform">Тип платформы для сбора ответов:</label></h5>
                <select asp-for="Type" id="sel1">
                    <option value="chat">Excel</option>
                    <option value="bot">Google Table</option>
                    <option value="platform">Our platform</option>
                </select>
            </div>
            <br>
            <br>
            <div class="text-center">
                <button id="set" type="submit" class="btn btn-success btn-lg">Далее</button>
            </div>
        </form>
    </div>
</div>

