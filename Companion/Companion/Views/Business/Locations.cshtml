@model Companion.Views.Models.Business.LocationsViewModel
<div class="text-center">
    <h2>Информация</h2>
</div>
<div class="row">
    <div class="container4">
        <form asp-action="Locations" method="post">
            <div class="form-group" asp-route-id="@Model.Id">
                <h5><label for="Locations">Адреса:</label></h5>
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5><label for="Locations">Период работы:</label></h5>
                <input asp-for="PeriodOfWork" class="form-control" />
                <span asp-validation-for="PeriodOfWork" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5><label for="Locations">Описание локаций:</label></h5>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div class="text-center">
                <button id="set" type="submit" class="btn btn-success btn-lg">Далее</button>
            </div>
        </form>
    </div>
</div>

