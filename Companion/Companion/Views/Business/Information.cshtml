@model Companion.Views.Models.Business.InformationViewModel
    <div class="text-center">
        <h2>Информация</h2>
    </div>
    <div class="row">
        <div class="container4">
            <form asp-action="Information" method="post" asp-route-id="@Model.Id">
                <div class="form-group">
                    <h5><label for="Information">Номер телефона</label></h5>
                    <input asp-for="Number" class="form-control" />
                    <span asp-validation-for="Number" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h5><label for="Information">Почта</label></h5>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <h5><label for="Information">Сайт</label></h5>
                    <input asp-for="WebSite" class="form-control" />
                    <span asp-validation-for="WebSite" class="text-danger"></span>
                </div>
                <br>
                <br>
                <div class="text-center">
                    <button id="set" type="submit" class="btn btn-success btn-lg">Далее</button>
                </div>
            </form>
        </div>
    </div>
