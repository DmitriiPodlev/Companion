@model Companion.Views.Models.Order.CreateOrderViewModel
<div class="text-center">
    <h2>Сделать заказ</h2>
</div>
<div class="row">
    <div class="container4">
        <form asp-action="Create" method="get">
            <div class="form-group">
                <h5><label for="Create">Название:</label></h5>
                @Model.Name
            </div>
            <div class="form-group">
                <h5><label for="Create">Адрес:</label></h5>
                Адреса: @Model.Adress
                <input asp-for="Adres" class="form-control" />
                <span asp-validation-for="Adres" class="text-danger"></span>
            </div>
            <div class="form-group">
                <h5><label for="Create">Время:</label></h5>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <br>
            <br>
            <div class="text-center">
                <button id="set" type="submit" class="btn btn-success btn-lg">Записаться</button>
            </div>
        </form>
    </div>
</div>
